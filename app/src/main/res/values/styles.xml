<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Titles">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NotesLogin">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieRating">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberReviews">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RentButton" parent="Button">
        <item name="android:backgroundTint">@color/brown</item>
    </style>

    <style name="BuyButton" parent="Button">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="GenreLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GenreName">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MovieDescription">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>