<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="20sp"
    android:orientation="vertical"
    tools:context=".activity_login">

    <ImageView
        android:id="@+id/ivPopcorns"
        android:layout_width="260dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginTop="70sp"
        app:srcCompat="@drawable/ic_palomitas"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/tvLogInLabel"
        style="@style/Titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="@string/log_in_label" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="70sp"
        android:layout_marginEnd="70sp"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70sp"
        android:layout_marginEnd="70sp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView6"
        style="@style/NotesLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="@string/password_forgotten" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="140sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="140sp"
        android:text="@string/btn_enter" />

    <TextView
        android:id="@+id/textView4"
        style="@style/NotesLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/no_account" />

</LinearLayout>